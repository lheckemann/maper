#!/bin/bash

modules () {
#    module load intel-suite
#    module load fsl/5.0.1
    return;
}

msg () {
    for msgline
    do echo "$pn: $msgline" >&2
    done
}

fatal () { msg "$@" ; exit 1 ; }

tempdir () {
    : ${TMPDIR:="/tmp"}
    tdbase=$TMPDIR/$USER
    test -e $tdbase || mkdir -p $tdbase
    td=$(mktemp -d $tdbase/$(basename $0).XXXXXX) || fatal "Could not create temp dir in $tdbase"
    echo "$td"
}

normalpath () {
    dir=$(dirname "$1")
    bas=$(basename "$1")
    echo $(cd $dir && pwd)/$bas
}

brake() { while true ; do j=$(jobs -r | wc -l) ; test $j -lt $1 && break ; done ; }

modules

export PATH=~/software/niftyreg/bin:$PATH
export PATH=~/software/niftyseg/bin:$PATH

set -e   # Terminate script at first error
